@model VeiculosModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cadastro Veicular</h2>

                <form asp-controller="Veiculos" asp-action="CadastroVeiculos" method="post">
                    <!-- Criação da lista para seleção dos Fabricantes Cadastrados -->
                    <div class="col-md-4 my-3">
                        <label class="form-label text-black">Fabricante</label>
                        <select name="Fabricante" class="form-select" required>
                            <option value="0" disabled selected>Selecione o Fabricante</option>
                            @foreach (string fab in ViewBag.Fabricantes)
                            {
                                <option value="@fab">@fab</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 my-3">
                        <label class="form-label text-black">Cor do Veículo</label>
                        <select name="Cor" class="form-select" required>
                            <option value="0" disabled selected>Selecione a Cor</option>
                            @foreach (string cor in ViewBag.Cor)
                            {
                                <option value="@cor">@cor</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 my-3">
                        <label for="Modelo" class="form-label">Modelo do Veículo</label>
                        <input type="text" name="Modelo" class="form-control" placeholder="Ex: Veiculo 1.6 16V Turbo" minlength="0" maxlength="40" required>
                    </div>

                    <div class="col-md-4 my-3">
                        <label for="Ano" class="form-label">Ano do Veículo</label>
                        <input type="number" name="Ano" class="form-control" placeholder="Preencher com 4 dígitos. Ex: 1990" minlength="4" maxlength="4" required>
                    </div>

                    <div class="col-md-4 my-3">
                        <label for="Placa" class="form-label">Placa do Veículo</label>
                        <input type="text" name="Placa" class="form-control" placeholder="Ex:ABC-1234" minlength="8" maxlength="8" required>
                    </div>

                    <div class="col-md-4 my-3">
                        <label for="Km" class="form-label">Quilometragem Atual do Veículo</label>
                        <input type="text" name="Km" class="form-control" placeholder="Ex:89000" minlength="1" maxlength="7" required>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Observações</label>
                        <textarea class="form-control" name="Obs" required>@Model.Obs</textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg p-2">Cadastrar</button>
                    
                </form>
            </div>
        </div>
    </div>
</div>